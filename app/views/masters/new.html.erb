<% provide(:title, 'Join') %>
<h1>Join the pack</h1>

<div class="row">
	<div class="span6 offset3 has-error">
		<%= form_for(@master) do |f| %>
			<%= render 'shared/error_messages' %>

			<%= f.label :name, "Master's Name" %>
			<%= f.text_field :name %>

			<%= f.label :email, "Master's Email" %>
			<%= f.text_field :email %>

			<%= f.label :password, "Master's password" %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Password Confirmation" %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "Join the Pack", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>