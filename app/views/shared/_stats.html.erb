<% @master ||= current_master %>
<div class="stats">
	<a href="<%= following_master_path(@master)%>">
		<strong id="following" class="stat">
			<%= @master.followed_masters.count %>
		</strong>
		following
	</a>	
	<a href="<%= followers_master_path(@master)%>">
		<strong id="followers" class="stat">
			<%= @master.followers.count %>
		</strong>
		followers
	</a>
</div>